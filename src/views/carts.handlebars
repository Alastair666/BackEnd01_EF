<div class="card-body m-0 p-3">
    <h4 class="mb-3">Product List in Cart</h4>
    <style>
        .center-both {
            text-align: center;
            vertical-align: middle;
        }
    </style>
    <table class="table table-bordered table-responsive table-hover">
        <thead>
            <tr class="bg-dark">
                <th scope="col" class="text-grey center-both">--</th>
                <th scope="col" class="text-grey">#</th>
                <th scope="col" class="text-grey">Titulo</th>
                <th scope="col" class="text-grey">Cod. Prod</th>
                <th scope="col" class="text-grey">Precio</th>
                <th scope="col" class="text-grey">Cantidad</th>
            </tr>
        </thead>
        {{#ifEquals status "success"}}
        <tbody>
            {{#each payload}}
            <tr>
                <td class="center-both"><button id="{{this._id}}" name="elimina{{this._id}}" value="Elimina" class="btn btn-danger mb-1 active-scale-down btn-delete-confirm"><i class="fa fa-trash"></i></button> </td>
                <th scope="row" class="text-end">{{inc @index}}</th>
                <td>{{this.title}}</td>
                <td>{{this.code}}</td>
                <td>{{this.price}}</td>
                <td>{{this.quantity}}</td>
            </tr>
            {{/each}}
        </tbody>
        {{else}}
        <tbody>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
        {{/ifEquals}}
    </table>
    <h4>Da de alta tu producto nuevo</h4>
    <div class="row">
        <div class="card-body h-100">
            <div class="row">
                <div class="col mb-2">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column justify-content-start m-0 p-3">
                            <div class="d-flex flex-column">
                                <div class="text-alternate">Debes completar <strong>todos los campos</strong> para poder
                                    dar de alta tu registro.</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer border-0 p-2 d-flex justify-content-end align-items-right align-items-center">
            <div class="btn-group m-0 p-0">
                <a href="/products" class="btn btn-secondary mb-1 active-scale-down">Regresar</a>
            </div>
            <div class="btn-group m-0 p-0">
                <input type="submit" name="btnDeleteAll" value="Delete All" id="btnDeleteAll" tabindex="2"
                    class="btn btn-danger mb-1 active-scale-down">
            </div>
        </div>
    </div>
</div>

<script src="/js/carts.js"></script>